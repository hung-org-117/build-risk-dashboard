@startuml
'===============================================================
' UC-10: CONFIGURE NOTIFICATION SETTINGS (Both)
'===============================================================

skinparam actorStyle stick
skinparam usecase {
    BorderColor #333333
    BackgroundColor #FFFFCC
}

left to right direction

actor "Admin" as Admin
actor "User" as User
Admin --|> User
actor "Gmail SMTP" as SMTP

rectangle {
    usecase "View Notification\nFeed" as UC_Feed
    usecase "Mark as Read" as UC_MarkRead
    usecase "Configure Email\nIntegration" as UC_Email
}

User --> UC_Feed
User --> UC_MarkRead
User --> UC_Email

UC_Email --> SMTP

@enduml
