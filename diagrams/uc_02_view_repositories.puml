@startuml
'===============================================================
' UC-02: VIEW REPOSITORIES / BUILD DETAILS (User & Guest)
'===============================================================

skinparam actorStyle stick
skinparam usecase {
    BorderColor #333333
    BackgroundColor #FFFFCC
}

left to right direction

actor "User" as User
actor "Guest\n(Read-only)" as Guest

rectangle {
    usecase "View Repositories" as UC_ListRepos
    usecase "View Builds" as UC_ViewBuilds
    usecase "Display Build\nmetadata / Examine\nFeature Contributions" as UC_Metadata
    usecase "View Risk\nAssessment" as UC_ViewRisk
}

User --> UC_ListRepos
Guest --> UC_ListRepos

UC_ListRepos ..> UC_ViewBuilds : <<include>>
UC_ViewBuilds ..> UC_Metadata : <<include>>
UC_ViewBuilds ..> UC_ViewRisk : <<include>>

@enduml
