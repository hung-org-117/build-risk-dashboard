@startuml
'===============================================================
' UC-06: VIEW / CUSTOMIZE DASHBOARD (Both)
'===============================================================

skinparam actorStyle stick
skinparam usecase {
    BorderColor #333333
    BackgroundColor #FFFFCC
}

left to right direction

' =============== ACTORS ===============
actor "Admin" as Admin
actor "User" as User
actor "Guest" as Guest
Admin --|> User

' =============== SYSTEM BOUNDARY ===============
rectangle {
    usecase "View Dashboard\nOverview" as UC_Dashboard
    usecase "Customize\nLayout" as UC_Customize
    usecase "Resize Widget" as UC_Resize
    usecase "Enable/Disable\nWidget" as UC_Toggle
}

User --> UC_Dashboard
User --> UC_Customize
Guest --> UC_Dashboard
Guest --> UC_Customize

' Customize Layout includes widget operations
UC_Customize ..> UC_Resize : <<include>>
UC_Customize ..> UC_Toggle : <<include>>

@enduml
