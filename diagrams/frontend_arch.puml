@startuml
'===============================================================
' FRONTEND ARCHITECTURE - NEXT.JS DASHBOARD
'===============================================================
skinparam componentStyle rectangle
skinparam rectangle {
  BorderColor #333333
  BackgroundColor #F5F5F5
}

actor "Admin/User/Guest" as U

rectangle "App Router (src/app)" as APP {
  component "Layouts\n(app shell,\nsidebar/topbar)" as LAYOUT
  component "Pages\n(overview, repos,\nbuilds, datasets,\nmonitoring, settings,\nadmin/users)" as PAGES
  component "API route helpers\n(fetchers)" as APIHELP
}

rectangle "UI Layer" as UI {
  component "Components\n(tables, cards,\ncharts, DAG viewer)" as COMP
  component "Radix UI\n(dialogs, dropdowns,\ntoasts)" as RADIX
  component "Tailwind CSS\n(theme, spacing)" as TAILWIND
}

rectangle "State & Data" as STATE {
  component "Contexts\n(auth/session,\nlayout prefs)" as CTX
  component "Hooks\n(data fetching,\nWebSocket client)" as HOOKS
  component "Types & Models\n(builds, repos,\ndatasets, notifications)" as TYPES
}

rectangle "Integration" as INT {
  component "REST client\n(Axios/fetch)" as REST
  component "WebSocket client\n(live updates)" as WS
  component "Auth (OAuth)\nGitHub login flow" as AUTH
}

U --> LAYOUT
LAYOUT --> PAGES
PAGES --> COMP
COMP --> RADIX
COMP --> TAILWIND

PAGES --> HOOKS
HOOKS --> REST
HOOKS --> WS
HOOKS --> CTX
CTX --> AUTH

REST -down-> TYPES
WS -down-> TYPES
HOOKS -down-> TYPES

@enduml
