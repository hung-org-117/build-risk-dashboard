@startuml
'===============================================================
' UC-01: AUTHENTICATION & AUTHORIZATION
'===============================================================

skinparam actorStyle stick
skinparam usecase {
    BorderColor #333333
    BackgroundColor #FFFFCC
}

left to right direction

actor "User" as User
actor "Admin" as Admin
Admin --|> User
actor "Guest" as Guest
actor "Github" as Github
actor "Google" as Google

rectangle {
    usecase "Login via Github" as UC_Login
    usecase "Login via Google\n(Guest)" as UC_GoogleLogin
    usecase "Validate Invitation\n(email/token)" as UC_Invitation
    usecase "Logout" as UC_Logout
    usecase "View Profile" as UC_Profile
    usecase "Sync Repository Access" as UC_Sync
}

User --> UC_Login
User --> UC_Logout
User --> UC_Profile
Guest --> UC_GoogleLogin
Guest --> UC_Logout
Guest --> UC_Profile

UC_Login --> Github
UC_Login ..> UC_Sync : <<include>>
UC_Sync --> Github
UC_GoogleLogin --> Google
UC_GoogleLogin ..> UC_Invitation : <<include>>

@enduml
